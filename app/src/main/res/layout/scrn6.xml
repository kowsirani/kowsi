<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white"
    android:weightSum="1">

    <ImageView
        android:id="@+id/i1"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/lan" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/mob"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/dg"
        android:textSize="18sp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/dg"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/dg"
            android:textSize="24sp"
            android:text="@string/max"/>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/pb1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:indeterminate="false"
        android:max="40"
        android:minHeight="40dp"
        android:minWidth="50dp"
        android:progress="0"
        android:progressBackgroundTint="@color/white"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/i2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/play"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:background="@color/lg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/sc"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/dg"
            android:textSize="18sp"
            android:drawableLeft="@drawable/userfill"
            android:layout_marginLeft="1dp"
            android:drawableRight="@drawable/bluetooth"
            />

    </LinearLayout>


</LinearLayout>